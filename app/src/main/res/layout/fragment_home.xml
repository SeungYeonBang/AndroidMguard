<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <LinearLayout
        android:id="@+id/linear1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvPersent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="0%"
            android:layout_marginLeft="10dp"
            android:textColor="#002D93"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="₩"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#002D93"/>
            <TextView
                android:id="@+id/tvRemain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="0"
                android:layout_marginBottom="5dp"
                android:textColor="#002D93"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="남았아요"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:textColor="#002D93"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/one"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvOneUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:textColor="#002D93"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/clock"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0일"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#002D93"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvCal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/linear1"/>
    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:listSelector="@android:color/transparent"
        android:layout_below="@id/tvCal"/>

    <ImageButton
        android:id="@+id/ibPlus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic__add_square"
        android:layout_gravity="right|bottom"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
    <ImageButton
        android:id="@+id/ibSetting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_settings"
        android:layout_gravity="right|bottom"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>



</RelativeLayout>